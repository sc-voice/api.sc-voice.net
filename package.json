{
  "name": "scv-server",
  "version": "1.0.0",
  "description": "SuttaCentral Voice Server",
  "main": "index.js",
  "private": false,
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.18.1",
    "express-jwt": "^7.7.0",
    "scv-bilara": "^3.28.7",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "mocha": "^10.0.0",
    "should": "^13.2.3",
    "supertest": "^6.2.3"
  },
  "scripts": {
    "build": "vue-cli-service build",
    "schedule-action": "scripts/schedule-action",
    "clear:sounds": "rimraf local/sounds",
    "dev": "npm run build; echo 'UI-only service'; npm run serve",
    "lint": "vue-cli-service lint",
    "serve": "vue-cli-service serve",
    "start": "npm run build; scripts/scv-server",
    "start:3000": "npm run build; scripts/scv-server -3000",
    "start:ssl": "npm run build; scripts/scv-server --ssl",
    "start:staging": "npm run build; scripts/scv-server --staging",
    "test": "npm run test:verbose",
    "test:test": "mocha --config test/mocha-config.json -g TESTTEST",
    "test:verbose": "mocha --inline-diffs",
    "test:watch": "mocha -w --inline-diffs"
  },
  "repository": {
    "tag": "git"
  },
  "bin": {},
  "keywords": [
    "SuttaCentral",
    "translation",
    "Voice"
  ],
  "author": "Karl Lew",
  "homepage": "https://github.com/sc-voice/scv-server",
  "license": "MIT"
}
