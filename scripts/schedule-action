#!/bin/bash
DIR=`dirname $0`; 
pushd $DIR/..
SCRIPT=`basename $0 | tr abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ`
echo -e "${SCRIPT}: BEGIN `date`"

git pull
npm install --save scv-bilara@latest\
  just-simple@latest\
  memo-again@latest\
  say-again@latest\
  suttacentral-api@latest\
  oya-ann@latest

git status | grep 'nothing to commit' > /dev/null; RC=$?
if [ "$RC" == "0" ]; then
  echo "$SCRIPT: Nothing to commit"
  exit 0
fi

MSG="$SCRIPT: updating package depedencies..."
echo $MSG
git commit -am "$MSG"
npm version patch
git push

$DIR/update-dockerhub

#TODO: solve github action AWS credential challenge
#npm run test; RC=$?; 
#if [ "$RC" == "0" ]; then
#  echo TEST COMPLETED!
#else 
#  echo "TESTS FAILED (RC$RC)"
#  exit $RC
#fi

echo -e "${SCRIPT}: END `date`"
